<div class="container">
    <div class="row">
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    <img src=<%= current_user.avatar.url %> />
                </div>
                <div class="card-content">
                    <div class="card-title"><%= current_user.name %></div>
                    <p>이메일 : <%= current_user.email %></p>
                    <p>올린 글 개수 : <%= @mposts_count %></p>
                    
                    <p>팔로워 : <%= current_user.followers.length %></p>
                    
                    <%= link_to posts_followings_path do %>
                        <p>팔로잉 : <%= current_user.followings.length %></p></br></br>
                    <% end %>
                    
                    <%= link_to new_post_path do %>
                        <button class="btn">글 쓰기</button>
                    <% end %>
                    
                </div>
            </div>
        </div>
        <div class="col s12 m8">
            <% @mposts.each do |post| %>
                <%= render partial: "post", object: post %>
            <% end %>
            <%= paginate @mposts %>
        </div>
    </div>
</div>