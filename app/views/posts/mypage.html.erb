<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="container">
    <div class="row">
        <div class="col s12">
        <div class="col s12 m4 l4">
            <div class="card" style="width: 100%; height: 35%">
                <div class="card-image">
                    <center><img src=<%= current_user.avatar.url %> style="width: 60%; height: auto;margin-top: 20pt"/></center>
                </div>
                <div class="card-content">
                    <div class="card-title"><%= current_user.name %></div>
                    <p>이메일 : <%= current_user.email %></p>
                    <p>올린 글 개수 : <%= @mposts_count %></p>
                    
                    <p>팔로워 : <%= current_user.followers.length %></p>
                    
                    <%= link_to posts_followings_path do %>
                        <p>팔로잉 : <%= current_user.followings.length %></p>
                    <% end %>
                    
                    <center ><div style="margin-top: 10px;">
                        <%= link_to new_post_path do %>
                            <button style="border-top-right-radius: 1rem;border-bottom-right-radius: 1rem;border-top-left-radius: 1rem;border-bottom-left-radius: 1rem">글 쓰기</button>
                        <% end %>
                        <%= link_to  edit_user_registration_path do %>
                            <button style="border-top-right-radius: 1rem;border-bottom-right-radius: 1rem;border-top-left-radius: 1rem;border-bottom-left-radius: 1rem">내 정보 수정</button>
                        <% end %>
                    </div></center>
                    
                </div>
            </div>
        </div>
        <div class="col s12 m8 l8">
            <% @mposts.each do |post| %>
                <%= render partial: "post", object: post %>
            <% end %>
            </div>
        
        
        </div>
        <%= paginate @mposts %>
    </div>
    
</div>
