<!DOCTYPE html>
<html>
  <head>
    <title>Gallery</title>
    <%= csrf_meta_tags %>
    <link href="//fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    
    <%=javascript_include_tag 'application',media: 'all'  %>
  </head>

  <body>
    <nav>

      <div class="nav-wrapper" style="padding: 0 20px;">
        <a href="/"  style="font-size: 25pt;font-weight: 600" >Gallery</a>
        
        <ul class="right">
          <% if user_signed_in? %>
            <li><a href="/posts" >Timeline</a></li>
            <li><a href="/posts/mypage" >MyPage</a></li>
            <li><%= link_to 'Sign out', destroy_user_session_path, method: 'delete'%></li>
            <li><%= current_user.name %></li>
          <% else %>
            
            <li><a href="/users/sign_in">Sign in</a></li>
            <li><a href="/users/sign_up">Sign up</a></li>
            <li><a href="/posts/notuser">Timeline(for NoUser)</a></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
